<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/header_gradient"
        android:padding="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_button_locations"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@drawable/circle_button_bg"
            android:padding="10dp"
            android:layout_marginEnd="20dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Locations"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find us across South Africa"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:alpha="0.9" />

        </LinearLayout>

        <Button
            android:id="@+id/locations_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu ▼"
            android:textColor="@color/white"
            android:background="@drawable/circle_button_bg"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <!-- Introduction -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/calculator_gradient"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Where to Find Us"
                        android:textSize="22sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginBottom="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Empowering the Nation operates in three major cities across South Africa, bringing quality education and skills training to communities nationwide."
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:lineSpacingMultiplier="1.6" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Johannesburg Location -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/about_card_gradient"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_marginBottom="20dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/joburg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📍 Johannesburg"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginBottom="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🏢 123 Mandela Square, Sandton, 2196"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="📞 +27 11 123 4567"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="✉️ jhb@empoweringthenation.co.za"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="⏰ Mon-Fri: 8:00 AM - 5:00 PM"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/call_jhb"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:text="📞 Call"
                            android:textColor="@color/white"
                            android:background="@drawable/action_button_bg"
                            android:paddingVertical="12dp"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/directions_jhb"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:text="🗺️ Directions"
                            android:textColor="@color/white"
                            android:background="@drawable/action_button_bg"
                            android:paddingVertical="12dp"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Cape Town Location -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/calculator_gradient"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_marginBottom="20dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/capetown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📍 Cape Town"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginBottom="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🏢 456 Waterfront Plaza, VA Waterfront, 8001"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="📞 +27 21 987 6543"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="✉️ cpt@empoweringthenation.co.za"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="⏰ Mon-Fri: 8:00 AM - 5:00 PM"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/call_cpt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:text="📞 Call"
                            android:textColor="@color/white"
                            android:background="@drawable/action_button_bg"
                            android:paddingVertical="12dp"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/directions_cpt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:text="🗺️ Directions"
                            android:textColor="@color/white"
                            android:background="@drawable/action_button_bg"
                            android:paddingVertical="12dp"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Durban Location -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/six_week_gradient"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_marginBottom="20dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/durban" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📍 Durban"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginBottom="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🏢 789 Marine Parade, Durban Central, 4001"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="📞 +27 31 555 9876"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="✉️ dbn@empoweringthenation.co.za"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="⏰ Mon-Fri: 8:00 AM - 5:00 PM"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/call_dbn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:text="📞 Call"
                            android:textColor="@color/white"
                            android:background="@drawable/action_button_bg"
                            android:paddingVertical="12dp"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/directions_dbn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:text="🗺️ Directions"
                            android:textColor="@color/white"
                            android:background="@drawable/action_button_bg"
                            android:paddingVertical="12dp"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>