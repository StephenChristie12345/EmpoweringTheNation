<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Include only specific shared preferences -->
    <include domain="sharedpref" path="app_settings.xml"/>

    <!-- OR use this simpler approach - include everything by default -->
    <include domain="file" path="."/>
    <include domain="sharedpref" path="."/>
    <include domain="database" path="."/>

    <!-- Then exclude only what you know exists and needs exclusion -->
    <exclude domain="file" path="no_backup/"/>
    <exclude domain="file" path="cache/"/>
</full-backup-content>